server {
    listen 443 ssl;

    server_name registry.${SERVICES_PREFIX}${DNS_SUFFIX};
    ssl_certificate /etc/letsencrypt/live/registry.${SERVICES_PREFIX}${DNS_SUFFIX}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/registry.${SERVICES_PREFIX}${DNS_SUFFIX}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://registry.${SERVICES_PREFIX}${DNS_SUFFIX}:80;
    }

}

server {
    listen 80;
    server_name registry.${SERVICES_PREFIX}${DNS_SUFFIX};
    location / {
        return 301 https://$host$request_uri;
    }    
    location /.well-known/acme-challenge/ {
    root /var/www/certbot;
}
}